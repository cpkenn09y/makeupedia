<div class="div-transparent div-user">
  <strong>Hi <%= @user.email %>!</strong>
  <%= link_to "Edit Profile", edit_user_path(current_user), {"data-ajax" => "false"} %>
  <% if current_user %>
    <div class="panel panel-default">
      <% current_user.pages.each do |page| %>
        <% @page = page %>

        <% page_user = @page.page_users.where('user_id=?',current_user.id).first %>
        <div class="panel-heading">
          <h4 class="panel-title full-width">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#<%= @page.id %>">
            <%= @page.ending %>
            </a>
            <%= link_to "[permalink]", page_user.permalink, :class => "permalink" %>
            <%= link_to 'X', page_user_path(page_user), :confirm => 'Are you sure you want to delete this page?', :class => 'delete', :method => :delete %>
          </h4>
        </div>
        <div id="<%= @page.id %>" class="panel-collapse collapse">
          <div class="panel-changes">
            <% page_user.changes.each do |change| %>
              <% @change = change %>
              <%= render 'changes/show' %>
            <% end %>
            <p class="acc-changes"><%= link_to "Apply all changes", '/wiki/'+@page.ending.split(' ').join('_'), class: "all-changes", 'data-ajax' => 'false' %></p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>


